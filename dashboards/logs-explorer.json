{
  "title": "Logs Explorer",
  "uid": "logs-explorer",
  "tags": ["freeradius", "logs"],
  "timezone": "browser",
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "title": "Log Volume by Source",
      "type": "barchart",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 0 },
      "datasource": { "type": "loki", "uid": "${loki_uid}" },
      "targets": [
        {
          "expr": "sum by (source) (count_over_time({environment=\"lab\"} [1m]))",
          "legendFormat": "{{source}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "fillOpacity": 80
          }
        }
      }
    },
    {
      "title": "Auth Failures",
      "type": "table",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 8 },
      "datasource": { "type": "loki", "uid": "${loki_uid}" },
      "targets": [
        {
          "expr": "{source=\"linelog\"} | json | result=\"reject\"",
          "refId": "A"
        }
      ],
      "options": {
        "showHeader": true
      },
      "transformations": [
        {
          "id": "extractFields",
          "options": {
            "source": "Line"
          }
        }
      ]
    },
    {
      "title": "Error Logs",
      "type": "logs",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 18 },
      "datasource": { "type": "loki", "uid": "${loki_uid}" },
      "targets": [
        {
          "expr": "{source=\"radius_log\"} |~ \"Error|ERROR\"",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "enableLogDetails": true,
        "sortOrder": "Descending"
      }
    },
    {
      "title": "Raw Log Stream",
      "type": "logs",
      "gridPos": { "h": 12, "w": 24, "x": 0, "y": 28 },
      "datasource": { "type": "loki", "uid": "${loki_uid}" },
      "targets": [
        {
          "expr": "{environment=\"lab\"}",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "enableLogDetails": true,
        "sortOrder": "Descending"
      }
    }
  ],
  "schemaVersion": 39
}
